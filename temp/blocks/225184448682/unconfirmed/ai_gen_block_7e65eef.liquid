{% doc %}
  @prompt
    i add metafield name custom.jinga_lala i wana show here like name:value
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-metafield-display-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-metafield-display__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout }};
    gap: {{ block.settings.gap }}px;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-metafield-display__name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_font_size }}px;
    font-weight: {{ block.settings.name_font_weight }};
    color: {{ block.settings.name_color }};
    margin: 0;
  }

  .ai-metafield-display__separator-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_font_size }}px;
    color: {{ block.settings.separator_color }};
  }

  .ai-metafield-display__value-{{ ai_gen_id }} {
    font-size: {{ block.settings.value_font_size }}px;
    font-weight: {{ block.settings.value_font_weight }};
    color: {{ block.settings.value_color }};
    margin: 0;
  }

  .ai-metafield-display__empty-{{ ai_gen_id }} {
    font-size: 14px;
    color: #999;
    font-style: italic;
    padding: 20px;
  }
{% endstyle %}

<div class="ai-metafield-display-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if product.metafields.custom.jinga_lala != blank %}
    <div class="ai-metafield-display__container-{{ ai_gen_id }}">
      {% if block.settings.show_name %}
        <span class="ai-metafield-display__name-{{ ai_gen_id }}">
          {{ block.settings.custom_name }}
        </span>
        <span class="ai-metafield-display__separator-{{ ai_gen_id }}">
          {{ block.settings.separator }}
        </span>
      {% endif %}
      <span class="ai-metafield-display__value-{{ ai_gen_id }}">
        {{ product.metafields.custom.jinga_lala }}
      </span>
    </div>
  {% else %}
    <div class="ai-metafield-display__empty-{{ ai_gen_id }}">
      No metafield value found for custom.jinga_lala
    </div>
  {% endif %}
</div>

